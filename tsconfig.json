{
    "compilerOptions": {
        "target": "ES2022",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "strict": true,
        "noImplicitAny": true,
        "declaration": false,
        "skipDefaultLibCheck": true,
        "strictNullChecks": true,
        "resolveJsonModule": true,
        "typeRoots": ["src/@types", "node_modules/@types"],
        "outDir": "dist"
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}